    android:layout_height="25dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"

    >
    <ImageView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/play"
        />
    <TextView
